{
    "compilerOptions": {
        "target": "ES2020",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,

        "jsx": "react-jsx",
        "module": "ESNext",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "moduleResolution":"Bundler",
        "paths": {
            "@/*"       : ["./src/*"],
        },
    },
    "include": [
        "**/*.ts", 
        "**/*.tsx", 
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "types",
    ]
}
